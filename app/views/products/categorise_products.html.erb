<h1> Listing Category Products </h1>

<% if @categorise_products.present? %>
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categorise_products.each do |categorise_products| %>
        <tr>
          <td><%= categorise_products.title %></td>
          <td><%= categorise_products.description %></td>
          <td><%= categorise_products.price %></td>
        </tr>
      <% end %>
    </tbody>

    <% if @subcategories.present? %>
      <tbody>
        <% @subcategories.each do |subcategory| %>
          <% subcategory.products.each do |product| %>
            <tr>
              <td><%= product.title %></td>
              <td><%= product.description %></td>
              <td><%= product.price %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    <% end %>


  </table>
<% else %>
  <h2> No Products Found </h2>
<% end %>
